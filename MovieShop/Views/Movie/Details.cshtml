@model MovieModel

<div id="main-container" class="d-flex" style="flex-direction: column;">
        <div id="sub-container-1" class="d-flex justify-content-around" >
            <img src="toy.PNG" alt="no" style="width: 20%; height: 100%">
            <div id="movie-info" class="d-flex" style="flex-direction: column; border: 2px solid black; width: 500px;">
                <h2 id="movie-title">Movie title</h2>
                <text id="movie-subtext">movie subtext</text>
                <div id="run-info" class="d-flex">
                    Runtime | Movie-Year
                    <div id="movie-tags" style="margin-left: 30px;">
                        <tag class="tag">dummy</tag>
                        <tag class="tag">other</tag>
                    </div>
                </div>
                <div id="rating" style="background-color: green; color: white; width: 8%; text-align: center; border-radius: 5px;">6.7</div>
                <p>
                    this is the description of the movie. hopefully I will wrap around the box I am given,
                    and not run off the page. wooooooooooooooooooooooooooooooooooooooooooo
                </p>
            </div>
            <div id="movie-buttons" class="d-flex" style="flex-direction: column;">
                <button class="btn" type="button">Review</button>
                <button class="btn" type="button" style="background-color: white;">Buy (Price)</button>
            </div>
        </div>

        <div id="sub-container-2" class="d-flex">
            <div id="facts-trailer" class="d-flex">
                <h5 style="font-weight: bold; border-bottom:2px solid rgb(74, 73, 73); padding-bottom: 5px; margin-bottom: 5px;">Movie facts</h5>
                <div>Release Date</div>
                <div>Run Time: 2h 42min</div>
                <div>Box Office: 20$</div>
                <div>Budget: 10$</div>
                <div style="border: none;">Other things</div>
                <h5 style="font-weight: bold; border-bottom:2px solid rgb(74, 73, 73); padding-bottom: 5px; margin-bottom: 5px; margin-top: 5px;">Trailers</h5>
                <div class="d-flex" id="trailers" style="border: none;">
                    <a class="trailers-link" href="google.com">(s) trailer</a>
                </div>
                
            </div>

            <div class="d-flex" style="width: 25%; height: 400px; background-color: rgb(255, 94, 0); flex-direction: column;">
                <h5 style="font-weight: bold; border-bottom:2px solid rgb(74, 73, 73); padding-bottom: 5px; margin-bottom: 5px;">Cast</h5>
                <div>Example Cast</div>
            </div>
        </div>
    </div>

    <style>
        #main-container {
            flex-direction: column;
        }
        #sub-container-1 {
            background-color: pink;
            height: 400px;
            width: 98%;
            margin: auto;
            background-image: url(@Model.BackdropUrl)
        }
        #sub-container-2 {
            margin: auto;
            margin-top: 10px;
            height: 400px;
            width: 50%;
            justify-content: center;
        }
        #movie-buttons button {
            border: 2px solid white;
            width: 150px;
            margin: 10px;
        }
        #movie-info * {
            margin: 4px;
        }
        .tag { 
            background-color: gray;
            color: white;
            font-weight: bold;
            font-size: 10px;
            border-radius: 7px;
            line-height: normal;
            padding: 3px;
        }
        #facts-trailer {
            background-color: rgba(196, 196, 196, 0.651);
            padding: 15px;
            margin-right: 100px;
            flex-direction: column;
            width: 300px;
        }
        #facts-trailer div {
            border-bottom: 2px solid black;
        }
        #trailers a {
            color: rgba(128, 128, 128, 0.774);
        }
</style>